<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Bar with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_background"
        android:padding="20dp"
        android:layout_margin="16dp">

        <!-- Include the back button -->
        <include
            layout="@layout/back_button" />

        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat"
            android:textSize="35sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit review"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- User List Container -->
    <LinearLayout
        android:id="@+id/userListContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"/>
    </LinearLayout>

    <!-- Chat Container -->
    <LinearLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp">

        <!-- Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false"/>

        <!-- Message Input Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/button_background">

            <ImageButton
                android:id="@+id/attachImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Attach Image"
                android:src="@drawable/ic_attach"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:padding="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/anticdidone_regular"
                android:background="@drawable/button_background"
                android:layout_marginEnd="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/anticdidone_regular"
                android:background="@drawable/button_background"
                android:backgroundTint="@null"
                android:padding="16dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- Include the bottom navigation bar -->
    <include
        layout="@layout/bottom_navbar" />

</LinearLayout> 