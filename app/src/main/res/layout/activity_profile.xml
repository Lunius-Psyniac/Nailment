<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Include the back button -->
        <include
            layout="@layout/back_button" />

        <!-- Your main content here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Other components go here -->
        </LinearLayout>
    </FrameLayout>

    <!-- Profile Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_background"
        android:padding="20dp"
        android:layout_margin="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:contentDescription="Profile Image" />

        <!-- Name and Location Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="35sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="@font/anticdidone_regular"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="@font/anticdidone_regular"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Rating Bar and Count Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <RatingBar
                android:id="@+id/profile_rating"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                android:progressTint="#FFD700"
                android:progressBackgroundTint="#CCCCCC" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="@font/anticdidone_regular" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <!-- Read Reviews Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/read_reviews_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:padding="12dp"
            android:text="Read Reviews"/>

        <!-- Book Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:padding="12dp"
            android:text="Book Appointment"/>

        <!-- Chat Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chat_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:padding="12dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
        
    <!-- Include the bottom navigation bar -->
    <include
        layout="@layout/bottom_navbar" />
</LinearLayout>
