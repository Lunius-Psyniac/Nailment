<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Include the back button -->
        <include
            layout="@layout/back_button" />

        <!-- Your main content here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Other components go here -->
        </LinearLayout>
    </FrameLayout>

    <!-- Profile Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/placeholder_image"
        android:padding="16dp"
        android:layout_margin="16dp">

        <!-- Profile Info -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            />

        <!-- Rating Bar and Count Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <RatingBar
                android:id="@+id/profile_rating"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                android:progressTint="#FFD700"
                android:progressBackgroundTint="#CCCCCC" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_marginTop="8dp"/>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="2dp"
            android:src="@drawable/placeholder_image"
            android:contentDescription="Profile Image" />

        <!-- Reviews Section -->

        <!-- Bar chart and star ratings placeholder -->

        <!-- Review Text -->

        <!-- Read Reviews Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/read_reviews_button"
            android:layout_width="274dp"
            android:layout_height="79dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Read Reviews"/>

        <!-- Book Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book_button"
            android:layout_width="274dp"
            android:layout_height="79dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Book Appointment"/>

        <!-- Chat Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chat_button"
            android:layout_width="274dp"
            android:layout_height="79dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:padding="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
        
    <!-- Include the bottom navigation bar -->
    <include
        layout="@layout/bottom_navbar" />
</LinearLayout>
