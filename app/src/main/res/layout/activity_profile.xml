<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button at the top left corner -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="16dp"
            android:background="@null"
            android:contentDescription="Back"
            android:src="@drawable/nailment_arrow" />

        <!-- Your main content here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Other components go here -->
        </LinearLayout>
    </FrameLayout>

    <!-- Profile Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/placeholder_image"
        android:padding="16dp"
        android:layout_margin="16dp">

        <!-- Profile Info -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            />

        <!-- Rating Bar and Count Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/profile_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="#FFD700"
                android:progressBackgroundTint="#CCCCCC"
                style="@style/CustomRatingBar" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:layout_marginTop="8dp"/>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="2dp"
            android:src="@drawable/placeholder_image"
            android:contentDescription="Profile Image" />

        <!-- Reviews Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="30sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <!-- Bar chart and star ratings placeholder -->

        <!-- Review Text -->

        <!-- Book Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book_button"
            android:layout_width="274dp"
            android:layout_height="79dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:baselineAligned="false"
            android:textStyle="bold"
            android:fontFamily="@font/anticdidone_regular"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:padding="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Home icon"
                android:src="@drawable/nailment_home" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/homeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/anticdidone_regular"
                android:text="Home"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Camera icon"
                android:src="@drawable/nailment_camera" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/anticdidone_regular"
                android:text="AR Nails"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Settings icon"
                android:src="@drawable/nailment_settings" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/anticdidone_regular"
                android:text="Settings"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
